/* pages/home/home.wxss */
/* 轮播图开始 */
swiper{
  height: 420rpx;
}
swiper image{
  height: 420rpx;
  width: 100%;
}
/* 分类九宫格 */
.categories{
  display: flex;
  flex-wrap: wrap;
  border-left: 1px solid #eee;
  border-top: 1px solid #eee;
}
.category{
  width: 33.333333%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 250rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
}
.category image{
  width: 70rpx;
  height: 70rpx;
}
.category text{
  font-size: 12px;
  color: #666;
  margin-top: 10px;
}